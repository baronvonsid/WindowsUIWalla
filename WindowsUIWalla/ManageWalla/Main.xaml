<Window x:Name="mainWindow" x:Class="ManageWalla.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="768" Width="1024" Loaded="MainWindow_Loaded">
    <Window.Resources>
        <AlternationConverter x:Key="AlternationConverter"/>
    </Window.Resources>
    <Grid x:Name="grid" >
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="300" MinWidth="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        
        <StackPanel MinWidth="200" MaxWidth="300" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Column="0" Grid.Row="0" >
            <StackPanel Background="#FFFF5B5B" Orientation="Vertical">
                <ToggleButton x:Name="cmdCategory" MinHeight="25" Background="#FFFF5B5B" Content="Category" Checked="cmdCategory_Checked" />
                <Rectangle x:Name="rectangleCategoryBusy" Width="300" Height="500" Visibility="Collapsed" />
                
                <!--

                        <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Rectangle Grid.Column="0" Grid.Row="0" Fill="Red" />
                    </Grid>            
                
                    <Viewbox Stretch="Fill">
                        <Rectangle x:Name="rectangleCategoryDummy"  Width="300" Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}" />
                    </Viewbox>
                -->

                <StackPanel x:Name="stackCategory" Visibility="Visible" >

                    <Viewbox Stretch="Fill">
                        <Rectangle x:Name="rectangleCategoryDummy"  Width="300" Height="500" />
                    </Viewbox>
        </StackPanel>

        </StackPanel>
            <StackPanel Orientation="Vertical" Background="#FFFFFF5B">
                <ToggleButton x:Name="cmdTag" MinHeight="25" Background="#FFFFFF5B" Content="Tag" Checked="cmdTag_Checked" />
                <Rectangle x:Name="rectangleTagBusy" Width="300" Height="500" Visibility="Collapsed" />
                <StackPanel x:Name="stackTag" Orientation="Vertical" Visibility="Collapsed" >
                    <Rectangle x:Name="rectangleTagDummy" Width="300" Height="500" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Background="#FF5BFF79">
                <ToggleButton x:Name="cmdSettings" MinHeight="25" Background="#FF5BFF79" Content="Settings" Checked="cmdSettings_Checked" />
                <Rectangle x:Name="rectangleSettingsBusy" Width="300" Height="500" Visibility="Collapsed" />
                <StackPanel x:Name="stackSettings" Orientation="Vertical" Visibility="Collapsed" >
                    <Rectangle x:Name="rectangleSettingsDummy" Width="300" Height="500" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">

            <WrapPanel MinHeight="300" x:Name="wrapImages" >
                <WrapPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FF16571F" Offset="0.747"/>
                        <GradientStop Color="#FF34BB46" Offset="0.386"/>
                    </LinearGradientBrush>
                </WrapPanel.Background>
            </WrapPanel>

            <StackPanel Orientation="Vertical"  Background="#FF5B62FF">
                <ToggleButton  x:Name="cmdView" MinHeight="25" Background="#FF5B62FF" Content="View" Checked="cmdView_Checked" />
                <Rectangle x:Name="rectangleViewBusy" Width="600" Height="400" />
                <StackPanel x:Name="stackView" Orientation="Vertical" Visibility="Collapsed" >
                    <Grid x:Name="gridView" ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="25" MaxHeight="25" MinHeight="25"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <WrapPanel x:Name="wrapMyViews" Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                            <TextBlock><Run Text="my first view"/></TextBlock>
                            <TextBlock><Run Text="my second view"/></TextBlock>
                            <TextBlock><Run Text="my third view"/></TextBlock>
                            <TextBlock><Run Text="my fourth view"/></TextBlock>
                            <TextBlock><Run Text="my fifth view"/></TextBlock>
                            <TextBlock><Run Text="my sixth view"/></TextBlock>
                            <TextBlock><Run Text="my seventh view"/></TextBlock>
                        </WrapPanel>

                        <WrapPanel x:Name="wrapOthersViews" Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock><Run Text="my first view"/></TextBlock>
                            <TextBlock><Run Text="my second view"/></TextBlock>
                            <TextBlock><Run Text="my third view"/></TextBlock>
                            <TextBlock><Run Text="my fourth view"/></TextBlock>
                            <TextBlock><Run Text="my fifth view"/></TextBlock>
                            <TextBlock><Run Text="my sixth view"/></TextBlock>
                            <TextBlock><Run Text="my seventh view"/></TextBlock>
                        </WrapPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <Button x:Name="cmdEditView" Content="Edit" Click="cmdEditView_Click" />
                            <Button x:Name="cmdAddNewView" Content="Add new" Click="cmdAddNewView_Click" />
                            <Button x:Name="cmdShowViewUrl" Content="Show Url" />
                            <Button x:Name="cmdLaunchInViewWalla" Content="Launch in View Walla" />
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="gridViewAddEdit" ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="25" MaxHeight="25" MinHeight="25"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                            <Expander ExpandDirection="Left" IsExpanded="True" >
                                <Expander.Header>
                                    <TextBlock Text="Summary" RenderTransformOrigin="0.5,0.5" Margin="0,20,0,20">
                                        <TextBlock.RenderTransform>
                                            <TransformGroup>
                                                <RotateTransform Angle="90"/>
                                            </TransformGroup>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Expander.Header>

                                <Rectangle Width="600" Height="400" >
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="#FF1A545D" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                            </Expander>

                            <Expander ExpandDirection="Left" IsExpanded="True" >
                                <Expander.Header>
                                    <TextBlock Text="Selection \ Sort" RenderTransformOrigin="0.5,0.5" Margin="0,32,0,20">
                                        <TextBlock.RenderTransform>
                                            <TransformGroup>
                                                <RotateTransform Angle="90"/>
                                            </TransformGroup>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Expander.Header>
                                <Rectangle >
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="#FF71F553" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Expander>

                            <Expander ExpandDirection="Left" IsExpanded="True" >
                                <Expander.Header>
                                    <TextBlock Text="Security" RenderTransformOrigin="0.5,0.5" Margin="0,20,0,20">
                                        <TextBlock.RenderTransform>
                                            <TransformGroup>
                                                <RotateTransform Angle="90"/>
                                            </TransformGroup>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Expander.Header>

                                <Rectangle >
                                    <Rectangle.Fill>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="#FFF59725" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Expander>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <Button x:Name="cmdAddEditViewSave" Content="Save Changes" />
                            <Button x:Name="cmdAddEditViewCancel" Content="Cancel Edit" Click="cmdAddEditViewCancel_Click" />
                            <Button x:Name="cmdAddEditViewDelete" Content="Delete View" />
                            <Button x:Name="cmdAddEditViewPreview" Content="Preview View" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Background="#FFFF5B88">
                <ToggleButton x:Name="cmdUpload" MinHeight="25" Background="#FFFF5B88" Content="Upload" Checked="cmdUpload_Checked" />
                <Rectangle x:Name="rectangleUploadBusy" Width="600" Height="400" />
                <StackPanel x:Name="stackUpload" Orientation="Vertical" Visibility="Collapsed" >
                    <Rectangle x:Name="rectangleUploadDummy" Width="600" Height="400" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
