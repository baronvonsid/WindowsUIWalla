                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Around town (30)"/>
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
            </TreeView>

            
